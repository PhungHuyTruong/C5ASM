@model PH48831_C5_ASM.Models.MonAn

<h1>Sửa món ăn</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MonAnId" />
    <div class="form-group">
        <label for="TenMon">Tên món</label>
        <input type="text" class="form-control" asp-for="TenMon" />
        <span asp-validation-for="TenMon" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Gia">Giá</label>
        <input type="number" class="form-control" asp-for="Gia" />
        <span asp-validation-for="Gia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="MoTa">Mô tả</label>
        <textarea class="form-control" asp-for="MoTa"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="HinhAnh">Hình ảnh</label>
        <input type="text" class="form-control" asp-for="HinhAnh" />
        <span asp-validation-for="HinhAnh" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
