@model PH48831_C5_ASM.Models.MonAn



<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Delfood</title>


    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />

    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600,700&display=swap" rel="stylesheet">

    <!-- font awesome style -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <!-- nice select -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/css/nice-select.min.css" integrity="sha256-mLBIhmBvigTFWPSCtvdu6a76T+3Xyt+K571hupeFLg4=" crossorigin="anonymous" />
    <!-- slidck slider -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css" integrity="sha256-UK1EiopXIL+KVhfbFa8xrmAWPeBjMVdvYMYkTAEv/HI=" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css.map" integrity="undefined" crossorigin="anonymous" />


    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/css/responsive.css" rel="stylesheet" />

</head>
<style>
    .button-spacing {
        margin-right: 20px;
    }

    .dynamic-box {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

        .dynamic-box img {
            max-width: 100%;
            height: auto;
            max-height: 500px;
        }

        .dynamic-box p {
            word-wrap: break-word;
        }

    .product-details-container {
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 2rem;
    }

    .product-title {
        font-size: 2rem;
        font-weight: bold;
        color: #007bff;
    }

    .product-price {
        font-size: 1.5rem;
        color: #28a745;
        font-weight: bold;
    }

    .product-description {
        font-size: 1rem;
        color: #555;
        line-height: 1.6;
    }

    .product-image {
        max-height: 400px;
        object-fit: cover;
    }

    .button-container {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .btn-custom {
        padding: 10px 30px;
        font-size: 1.2rem;
    }

    .product-description, .product-details-container p {
        color: #000000;
    }
</style>

<div class="container py-5">
    <h1 class="text-center mb-4">Chi tiết món ăn</h1>

    <div class="product-details-container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4">
                <h3 class="product-title">@Model.TenMon</h3>
                <hr class="my-3">
                <p><strong>Giá:</strong> <span class="product-price">@Model.Gia.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</span></p>
                <p><strong>Loại món ăn:</strong> @Model.LoaiMonAn.TenLoaiMon</p>
                <p><strong>Địa chỉ quán:</strong> @Model.DiaChiQuan.DiaChiChiTiet</p>
                <p><strong>Thành phần:</strong> @Model.ThanhPhan.TenThanhPhan</p>
                <p class="product-description"><strong>Mô tả:</strong> @Model.MoTa</p>
            </div>

            <div class="col-md-6 mb-4">
                <img src="@Model.HinhAnh" alt="@Model.TenMon" class="img-fluid rounded shadow-sm product-image" />
            </div>
        </div>

        <div class="button-container mt-4">
            <a href="@Url.Action("Index", "MonAn")" class="btn btn-primary btn-lg btn-custom">Quay lại danh sách món ăn</a>
            <a href="@Url.Action("AddToCart", "Cart", new { id = Model.MonAnId })" class="btn btn-success btn-lg btn-custom">Thêm vào giỏ hàng</a>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-beta1/js/bootstrap.bundle.min.js"></script>
<script src="js/jquery-3.4.1.min.js"></script>
<!-- bootstrap js -->
<script src="js/bootstrap.js"></script>
<!-- slick  slider -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.js"></script>
<!-- nice select -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/js/jquery.nice-select.min.js" integrity="sha256-Zr3vByTlMGQhvMfgkQ5BtWRSKBGa2QlspKYJnkjZTmo=" crossorigin="anonymous"></script>
<!-- custom js -->
<script src="js/custom.js"></script>
