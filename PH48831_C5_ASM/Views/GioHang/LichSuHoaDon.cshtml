<h2>Lịch sử hóa đơn</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã Hóa Đơn</th>
            <th>Ngày Lập</th>
            <th>Tổng Tiền</th>
            <th>Trạng Thái</th>
            <th>Chi Tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hoaDon in Model)
        {
            <tr>
                <td>@hoaDon.HoaDonId</td>
                <td>@hoaDon.NgayLap.ToString("dd/MM/yyyy")</td>
                <td>@(hoaDon.TongTien.ToString("#,0").Replace(",", ".") + "Đ")</td>
                <td>@hoaDon.TrangThaiHoaDon.TenTrangThai</td>
                <td>
                    <a asp-action="XemHoaDon" asp-route-hoaDonId="@hoaDon.HoaDonId">Xem chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg btn-custom">Quay lại danh sách món ăn</a>

